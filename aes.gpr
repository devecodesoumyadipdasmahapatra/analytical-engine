with "gnatcoll_gmp";

project Aes is

   for Source_Dirs use ("src");
   for Object_Dir use ".build";
   for Exec_Dir use ".";

   for Main use ("aes.adb");

   package Builder is
      for Default_Switches ("ada") use ("-g", "-O0");
   end Builder;

   package Compiler is
   for Default_Switches ("ada") use
     (
      "-gnatwa",
      "-gnatqQafoy"
     );
   end Compiler;

   package Binder is
      for Default_Switches ("ada") use ("-E");
   end Binder;

end Aes;
